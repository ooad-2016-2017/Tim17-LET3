<Page
    x:Class="ProjekatMyPub.View.MenadzerZaposlenik"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatMyPub.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>



        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition x:Name="kolona4" Width="Auto" />


        </Grid.ColumnDefinitions>

        <Button Name="MenadzerZaposlenikHamburger" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="36" Click="PrikaziMeni_Click" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" />
        <TextBlock x:Name="textBlockMenadzerZaposlenikIme" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Dobrodosli" VerticalAlignment="Top" FontSize="20"/>
        <ListView x:Name="listViewMenadzerZaposlenik" HorizontalAlignment="Stretch"  Grid.Row="2" Grid.Column="0" VerticalAlignment="Top"  Margin="10,5,10,0" Grid.ColumnSpan="2" Grid.RowSpan="3" >
        </ListView>
        <Button x:Name="buttonMenadzerZaposlenikAzuriraj" Content="Azuriraj" Grid.Row ="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,30,10,0" Width ="Auto"/>
        <Button x:Name="buttonMenadzerZaposlenikDodaj" Content="Dodaj" Grid.Column="3"  Grid.Row="6" VerticalAlignment="Top" Width="{Binding ElementName=kolona4,Path=ActualWidth}" HorizontalAlignment="Left" Margin="0,30,10,0" MaxWidth="300"/>
        <Button x:Name="buttonMenadzerZaposlenikObrisi" Content="Obrisi" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Top" Margin="10,30,10,0" Width ="Auto"/>
        <TextBlock x:Name="labelaMenadzerZaposlenikIme" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="Ime:" VerticalAlignment="Top" Foreground ="Black"  FontFamily="Verdana" FontSize="20" Height="24" Width="Auto" />
        <TextBlock x:Name="labelaMenadzerZaposlenikPrezime" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="Prezime:" VerticalAlignment="Top" Foreground ="Black"  FontFamily="Verdana" FontSize="20" Height="24" Width="Auto" />
        <TextBlock x:Name="labelaMenadzerZaposlenikEmail" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="E-mail:" VerticalAlignment="Top" Foreground ="Black"  FontFamily="Verdana" FontSize="20" Height="24" Width="Auto" />
        <TextBlock x:Name="labelaMenadzerZaposlenikPlata" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="Plata:" VerticalAlignment="Top" Foreground ="Black"  FontFamily="Verdana" FontSize="20" Height="24" Width="Auto" />
        <TextBox x:Name="textBoxMenadzerZaposlenikIme" VerticalAlignment="Top" Grid.Row ="2"   Grid.Column="3"  Width="{Binding ElementName=kolona4,Path=ActualWidth}" HorizontalAlignment="Left" Margin="0,20,0,0" Text="" MaxWidth="300" Height="40"/>
        <TextBox x:Name="textBoxMenadzerZaposlenikPrezime" VerticalAlignment="Top" Grid.Row ="3"  Grid.Column="3"  Width="{Binding ElementName=kolona4,Path=ActualWidth}" HorizontalAlignment="Left" Margin="0 ,20,0,0" Text="" MaxWidth="300" Height="40"/>
        <TextBox x:Name="textBoxMenadzerZaposlenikEmail" VerticalAlignment="Top" Grid.Row ="4"   Grid.Column="3"  Width="{Binding ElementName=kolona4,Path=ActualWidth}" HorizontalAlignment="Left" Margin="0,20,0,0" Text="" MaxWidth="300" Height="40"/>
        <TextBox x:Name="textBoxMenadzerZaposlenikPlata"  VerticalAlignment="Top" Grid.Row ="5"  Grid.Column="3"  Width="{Binding ElementName=kolona4,Path=ActualWidth}" HorizontalAlignment="Left" Margin="0,20,0,0" Text="" MaxWidth="300" Height="40"/>




    </Grid>
</Page>
